generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    providerId String  @unique
    email      String  @unique
    firstName  String
    lastName   String?

    ProfileLink ProfileLink[]
}

model ProfileLink {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    link String @unique

    name String
    bio  String?

    user   User   @relation(fields: [userId], references: [id])
    userId String

    Bento Bento[]

    @@index([userId])
}

model Bento {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    type BentoType

    href    String? // for link type
    url     String? // for image/video type
    caption String? // for image/video type

    // style = {mobile: string, desktop: string}
    style    Json
    // position = {mobile: number, desktop: number}
    position Json

    profileLink   ProfileLink @relation(fields: [profileLinkId], references: [id])
    profileLinkId String

    @@index([profileLinkId])
}

enum BentoType {
    LINK
    IMAGE
    VIDEO
}
